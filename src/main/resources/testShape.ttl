@prefix :      <http://example.com/privacy-policy-model/> .
@prefix schema: <http://schema.org/> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:  <http://www.w3.org/2004/02/skos/core#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ppmprof: <http://example.com/privacy-policy-model/odrl-profile/> .
@prefix ns1:   <http://purl.org/vocab/vann/> .
@prefix svpr:  <http://www.specialprivacy.eu/vocabs/processing#> .
@prefix dct:   <http://purl.org/dc/terms/> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix dpv-gdpr: <http://www.w3.org/ns/dpv-gdpr#> .
@prefix vann:  <http://purl.org/vocab/vann/> .
@prefix prov:  <http://www.w3.org/ns/prov#> .
@prefix svpu:  <http://www.specialprivacy.eu/vocabs/purposes#> .
@prefix foaf:  <http://xmlns.com/foaf/0.1/> .
@prefix svd:   <http://www.specialprivacy.eu/vocabs/data#> .
@prefix cc:    <http://creativecommons.org/ns#> .
@prefix sw:    <http://www.w3.org/2003/06/sw-vocab-status/ns#> .
@prefix orcp:  <http://example.com/odrl:profile:regulatoryCompliance/> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .
@prefix dpv:   <http://www.w3.org/ns/dpv#> .
@prefix spl:   <http://www.specialprivacy.eu/langs/usage-policy#> .
@prefix ex:    <http://example.org/shacl_examples#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix time:  <http://www.w3.org/2006/time#> .
@prefix odrl:  <http://www.w3.org/ns/odrl/2/> .
@prefix dash:  <http://datashapes.org/dash#> .

:RequestIMDB  a          sh:NodeShape , rdfs:Class ;
              rdfs:label       "RequestIMDB" ;
              rdfs:subClassOf  ex:RequestBase ;
              sh:rule          [ a             sh:SPARQLRule ;
                                 rdfs:label    "Infer if $this is compliant" ;
                                 sh:condition  [ sh:property  [ sh:maxCount  "0"^^xsd:int ;
                                                                sh:path      :parentRequest
                                                              ]
                                               ] ;
                                 sh:construct  "PREFIX :<http://example.com/privacy-policy-model/>\nPREFIX ex:<http://example.org/shacl_examples#>\nCONSTRUCT {\n\t$this :children ?total .\n\t$this :nPermitted ?granted .\n\t$this :nProhibited ?prohibited .\n             $this :answer ?perm .\n}\nWHERE {\n\t{SELECT $this (COUNT(*) AS ?total)\n\tWHERE {\n\t\t?s :parentRequest $this .\n\t}\n\tgroup by $this\n\t}\n\t{SELECT $this (SUM(IF(?p,1,0)) AS ?granted)\n\tWHERE {\n\t\t?s :parentRequest $this .\n\t\tbind(exists { ?s :answer \"permitted\" } as ?p)\n\t}\n\tgroup by $this\n\t}\n\t\t\t{\n\tSELECT $this (SUM(IF(?proh,1,0)) AS ?prohibited)\n\tWHERE {\n\t\t?s :parentRequest $this .\n\t\tbind(exists { ?s :answer \"prohibited\" } as ?proh)\n\t}\n\tgroup by $this\n\t}\n\tBIND ( IF ( ?total = ?granted, \"granted\", IF( ?granted = 0 && ?prohibited > 0, \"prohibited\" , IF ( ?total > ?granted && ?granted > 0, \"part-granted\", 'not granted' ) )) AS ?perm )\n}\n" ;
                                 sh:order      "100"^^xsd:int ;
                                 sh:prefixes   ":"
                         ] ;
              sh:rule          [ a             sh:SPARQLRule ;
                                 rdfs:label    "Infer if $this is covered by orcp:Permission :IMDBPermission1" ;
                                 sh:condition  [ sh:property  [ sh:minCount  "1"^^xsd:int ;
                                                                sh:or        ( [ sh:class  dpv:CustomerCare ]
                                                                               [ sh:class  dpv:ServicePersonalization ]
                                                                               [ sh:class  dpv:UserInterfacePersonalisation ]
                                                                             ) ;
                                                                sh:path      :purpose
                                                              ]
                                               ] ;
                                 sh:condition  [ sh:property  [ sh:hasValue  :IMDBUser ;
                                                                sh:minCount  "1"^^xsd:int ;
                                                                sh:path      :hasDataSubject
                                                              ]
                                               ] ;
                                 sh:condition  [ sh:property  [ sh:minCount  "1"^^xsd:int ;
                                                                sh:or        ( [ sh:class  dpv:Collect ]
                                                                               [ sh:class  dpv:Use ]
                                                                               [ sh:class  dpv:Store ]
                                                                             ) ;
                                                                sh:path      :action
                                                              ]
                                               ] ;
                                 sh:condition  [ sh:property  [ sh:hasValue  :IMDB ;
                                                                sh:minCount  "1"^^xsd:int ;
                                                                sh:path      :controller
                                                              ]
                                               ] ;
                                 sh:condition  [ sh:property  [ sh:minCount  "1"^^xsd:int ;
                                                                sh:or        ( [ sh:class  dpv:TelephoneNumber ]
                                                                               [ sh:class  dpv:Preference ]
                                                                               [ sh:class  dpv:Like ]
                                                                               [ sh:class  dpv:Dislike ]
                                                                               [ sh:class  dpv:Name ]
                                                                               [ sh:class  dpv:EmailAddress ]
                                                                               [ sh:class  dpv:Country ]
                                                                               [ sh:class  dpv:PhysicalAddress ]
                                                                               [ sh:class  dpv:Age ]
                                                                               [ sh:class  dpv:Gender ]
                                                                             ) ;
                                                                sh:path      :data
                                                              ]
                                               ] ;
                                 sh:condition  [ sh:property  [ sh:maxCount  "0"^^xsd:int ;
                                                                sh:path      :childRequest
                                                              ]
                                               ] ;
                                 sh:construct  "PREFIX :<http://example.com/privacy-policy-model/>\nPREFIX ex:<http://example.org/shacl_examples#>\nPREFIX rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>\nCONSTRUCT {\n\t$this :conformsTo :IMDBPermission1 .\n\t$this :answer \"permitted\" .\n}\nWHERE {}\n" ;
                                 sh:order      "1"^^xsd:int ;
                                 sh:prefixes   ":"
                         ] .
